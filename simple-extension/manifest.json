{
  "manifest_version": 2,
  "name": "Project 101",
  "version": "1.0",
  "description": "Simple extension as possible",
  "permissions": ["tabs", "activeTab"],
  "browser_action": {
    "default_icon": "./icons/micro.png",
    "default_title": "Project 101",
    "default_popup": "./popup/popup.html"
  },
  "background": {
    "page": "background/background.html",
    "persistent": false
  },
  "chrome_url_overrides": {
    "bookmarks": "./main/main.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*", "<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
